<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/txv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/lorem[1]" />

    <TextView
        android:id="@+id/txv_two_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/two_points"
        app:layout_constraintBottom_toBottomOf="@+id/txv_name"
        app:layout_constraintStart_toEndOf="@+id/txv_name"
        app:layout_constraintTop_toTopOf="@+id/txv_name" />

    <TextView
        android:id="@+id/txv_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="?attr/colorPrimaryDark"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/txv_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txv_two_points"
        app:layout_constraintTop_toTopOf="@+id/txv_name"
        tools:text="@tools:sample/lorem[4]" />

</androidx.constraintlayout.widget.ConstraintLayout>